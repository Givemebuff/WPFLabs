<Window x:Class="WpfLabs.GenerateBitmapDemo.GenerateBitmapDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLabs.GenerateBitmapDemo"
        mc:Ignorable="d"
        Title="GenerateBitmapDemo" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="Img" Grid.Row="0" Width="200" Height="200"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Content="画图" Margin="5" Click="PaintBtn_OnClick"/>
            <Button Width="100" Content="保存" Margin="5" Click="SaveBtn_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
