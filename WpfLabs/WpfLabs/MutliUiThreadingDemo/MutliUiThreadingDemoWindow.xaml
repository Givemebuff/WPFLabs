<Window x:Class="WpfLabs.MutliUiThreadingDemo.MutliUiThreadingDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MutliUiThreadingDemoWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock x:Name="MainThreadingInfo" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Width="100" Height="50" Content="弹窗" Click="RunNewWindow_OnClick" />
        </StackPanel>
    </Grid>
</Window>