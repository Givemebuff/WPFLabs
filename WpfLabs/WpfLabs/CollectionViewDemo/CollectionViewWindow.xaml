<Window x:Class="WpfLabs.CollectionViewDemo.CollectionViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLabs.CollectionViewDemo"
        mc:Ignorable="d"
        Title="CollectionViewWindow" Height="800" Width="800">
    <Grid>
        <TabControl Grid.Row="0">
            <TabItem Header="普通集合">
                <local:CollectionNormal x:Name="CollectionNormal"/>
            </TabItem>
            <TabItem Header="视图集合">
                <local:CollectionView x:Name="CollectionView"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
