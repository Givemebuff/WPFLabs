<Window x:Class="WpfLabs.WaterMarkDemo.WaterMarkDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLabs.WaterMarkDemo"
        mc:Ignorable="d"
        Title="WaterMarkDemoWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="附加属性:"/>
            <TextBox x:Name="AttachPropertyTextBox" local:WaterMarkManager.WaterMarkText="测试附加属性水印"/>
        </StackPanel>
    </Grid>
</Window>
