<Window x:Class="WpfLabs.Helper.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLabs.Helper"
        mc:Ignorable="d"
        Title="LogWindow" Height="500" Width="500" WindowStartupLocation="Manual">
    <TextBox x:Name="LogTextBox" IsReadOnly="True" TextChanged="LogTextBoxOnTextChanged" GotFocus="LogTextBox_OnGotFocus"/>
</Window>
