<UserControl x:Class="WpfLabs.Timer.Timer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfLabs.Timer"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d"
             d:DesignHeight="390" d:DesignWidth="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#8B92AE">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="1">
                <TextBlock Text="计时器" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            </Viewbox>
        </Grid>
        <Grid Grid.Row="1" Background="#6B73A1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="1">
                <Canvas Width="100" Height="100">
                    <Canvas.RenderTransform>
                        <RotateTransform x:Name="TimeLineRotateTransform" Angle="0"></RotateTransform>
                    </Canvas.RenderTransform>
                    <Canvas.Triggers>
                        <EventTrigger RoutedEvent="Canvas.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation From="0" To="360" RepeatBehavior="Forever" Duration="0:1:0" Storyboard.TargetName="TimeLineRotateTransform" Storyboard.TargetProperty="Angle"></DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Canvas.Triggers>
                    <Ellipse Width="3" Height="3" Canvas.Left="48.5" Canvas.Top="-1" Panel.ZIndex="100" Fill="White" Opacity="0.7"/>
                    <Ellipse Width="5" Height="5" Canvas.Left="47.5" Canvas.Top="-2" Panel.ZIndex="101" Fill="White">
                        <Ellipse.Effect>
                            <BlurEffect Radius="5"></BlurEffect>
                        </Ellipse.Effect>
                    </Ellipse>
                    <ed:Arc ArcThickness="0" ArcThicknessUnit="Pixel" StartAngle="180" EndAngle="361" Fill="#FFF4F4F5" Height="100" Stretch="None" StrokeThickness="1" Width="100">
                        <ed:Arc.Stroke>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0" Color="#2CD5CC"></GradientStop>
                                <GradientStop Offset="1" Color="#73A9B7"></GradientStop>
                            </LinearGradientBrush>
                        </ed:Arc.Stroke>
                    </ed:Arc>
                    <ed:Arc ArcThickness="0" ArcThicknessUnit="Pixel" StartAngle="0" EndAngle="181" Fill="#FFF4F4F5" Height="100" Stretch="None" StrokeThickness="1" Width="100">
                        <ed:Arc.Stroke>
                            <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                <GradientStop Offset="0" Color="#73A9B7"></GradientStop>
                                <GradientStop Offset="1" Color="#B5C4D7"></GradientStop>
                            </LinearGradientBrush>
                        </ed:Arc.Stroke>
                    </ed:Arc>
                </Canvas>
            </Viewbox>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="9*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="1" SnapsToDevicePixels="True">
                    <Border Width="12" Height="12" Background="White" CornerRadius="6,6,6,6" Padding="1" SnapsToDevicePixels="True">
                        <Viewbox>
                            <TextBlock SnapsToDevicePixels="True" Foreground="#2CD5CC">00:08:56</TextBlock>
                        </Viewbox>
                    </Border>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>